@model Category

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Display Category</h2>
        <hr />
    </div>
    <div class="border p-1 m-2 text-center">
        <img src="~/@Model.ImageUrl" width="80%" style="border-radius:5px; border:1px solid #bbb9b9" />
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" disabled class="form-control" />
    </div>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back To List
    </a>
</div>