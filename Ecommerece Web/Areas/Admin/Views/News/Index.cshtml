@model List<News>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">News</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="News" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New News
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Image
                </th>
                <th>
                    Video
                </th>
                <th>
                    Content
                </th>
                <th>
                    CreatedAt
                </th>
                <th>#</th>
                <th>#</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(i => i.CreatedAt))
            {
                <tr>
                    <td>
                        @obj.Title
                    </td>
                    @if(obj.ImageUrl != null)
                    {
                        <td>
                            <img src="~/@obj.ImageUrl" class="card-img-top rounded" height="75px" />
                            @*<img class="mt-4" src="~/@Model.Product.ImageUrl" width="100%" />*@
                        </td>
                    }
                    else
                    {
                        <td>
                            Null
                        </td>   
                    }
                    @if (obj.VideoUrl != null)
                    {
                        <td>
                            <video src="~/@obj.VideoUrl" type="video" width="120" height="120" class="card-video-top rounded" controls />
                        </td>
                    }
                    else
                    {
                        <td>
                            Null
                        </td>
                    }
                    <td>
                        @obj.Content
                    </td>
                    <td>
                        @obj.CreatedAt.DateTime
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@obj.Id" asp-controller="News" asp-action="Edit"
                               class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@obj.Id" asp-controller="News" asp-action="Delete"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@obj.Id" asp-controller="News" asp-action="Details" class="btn btn-success mx-2">
                                <i class="bi"></i>Details
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>