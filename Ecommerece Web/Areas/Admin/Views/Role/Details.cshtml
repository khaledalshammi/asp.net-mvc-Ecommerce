@model Role
<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Display Role</h2>
        <hr />
    </div>
    <div class="mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" disabled class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    @{
        string valid = "";
        if (Model.Valid == true)
        {
            valid = "Available";
        }
        else
        {
            valid = "NotAvailable";
        }
    }
    <div class="mb-3">
        <label for="Valid"></label>
        <input type="text" disabled value="@valid" class="form-control"/>
    </div>
    <a asp-controller="Role" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back To List
    </a>
</div>