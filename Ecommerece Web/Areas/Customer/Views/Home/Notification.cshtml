@model List<Notification>
<div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-0 border" style="background-color: #f0f2f5;">
            <h1 class="text-center pt-4 text-primary">Notification</h1>
            @foreach(Notification notification in Model.OrderByDescending(e => e.SentAt))
            {
                <div class="card-body p-4">
                    <div class="card mb-4">
                        <div class="card-title">
                            <h3 class="text-center text-secondary mb-0 mt-4">@notification.Title</h3>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@notification.Content</p>
                        </div>
                        <p class="d-flex align-self-end text-primary" style="padding-right:16px;">@notification.SentAt.DateTime</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>